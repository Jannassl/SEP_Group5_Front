<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.KalenteriController" stylesheets="@TapahtumatStyles.css">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
                <Button fx:id="TakaisinButton" onAction="#navigateBackwards" prefHeight="25.0" prefWidth="90.0" styleClass="back-button" text="Takaisin">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Kalenteri" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="27.0" />
                    </font>
                </Text>
                <Button fx:id="ProfiiliButton" onAction="#openProfiiliPage" prefHeight="25.0" prefWidth="90.0" styleClass="profiili-button" text="Profiili">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="LogOutButton" onAction="#CloseProgram" prefHeight="25.0" prefWidth="120.0" styleClass="logout-button" text="Kirjaudu ulos" />
            </HBox>

            <Line endX="1000.0" startX="0.0" />

            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
                <Button fx:id="PreviousWeekButton" onAction="#showPreviousWeek" prefHeight="25.0" prefWidth="150.0" text="Edellinen viikko" styleClass="Week-Button">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="CurrentWeekButton" onAction="#showCurrentWeek" prefHeight="25.0" prefWidth="150.0" text="T채m채 viikko" styleClass="Today-Button">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="NextWeekButton" onAction="#showNextWeek" prefHeight="25.0" prefWidth="150.0" text="Seuraava viikko" styleClass="Week-Button">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="NewEvent" onAction="#newEvent" prefHeight="25.0" prefWidth="200.0" text="Lis채채 oppitunti" styleClass="All-Button">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </HBox>

            <ListView fx:id="dayListView" VBox.vgrow="ALWAYS" orientation="HORIZONTAL" styleClass="Lista-ikkuna" prefHeight="400.0" minHeight="400.0" maxHeight="400.0"/>
        </VBox>
    </children>
</AnchorPane>