<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController" stylesheets="@loginstyles.css">
   <children>
      <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" prefHeight="300.0" prefWidth="500.0" spacing="30.0" style="-fx-padding: 0 0 50 0;">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Oppilastietojärjestelmä" wrappingWidth="400.0" textAlignment="CENTER">
            <font>
               <Font size="36.0" />
            </font>
         </Text>
         <VBox alignment="CENTER" spacing="10.0">
            <Label text="Käyttäjätunnus" textAlignment="CENTER" alignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField id="loginUsername" fx:id="loginUsername" prefHeight="32.0" prefWidth="150.0" minWidth="150.0" maxWidth="150.0" />
            <Label text="Salasana" textAlignment="CENTER" alignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField id="loginPassword" fx:id="loginPassword" prefHeight="32.0" prefWidth="150.0" minWidth="150.0" maxWidth="150.0" />
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#attemptLogin" prefHeight="25.0" prefWidth="200.0" text="Kirjaudu" />
         </VBox>
      </VBox>
   </children>
</AnchorPane>